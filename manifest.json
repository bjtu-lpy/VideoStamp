{
  "manifest_version": 3,
  "name": "Video Stamp",
  "description": "视频时间戳，轻松记录网页视频时刻",
  "version": "2.2",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "webNavigation",
    "scripting"
  ],
  "host_permissions": [
      "*://*/*"
    ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options/op.html"

}
